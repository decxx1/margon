---
import ArrowRight from '@/icons/ArrowRight.astro';
interface Props {
    title: string;
    subtitle: string;
    description: string;
    img: string;
}
const { title, subtitle, description, img } = Astro.props
---
<div class="items-center bg-white rounded-lg shadow-lg md:py-8 sm:flex dark:bg-gray-900 dark:border-gray-700">
    <a href="/catalogo" class="h-auto w-56 mx-auto ">
        <img 
            class="max-h-full max-w-48 sm:max-w-full mx-auto object-contain rounded-lg sm:rounded-none sm:rounded-l-lg"
            src={img}
            alt={title}
        />
    </a>
    <div class="p-5">
        <h3 class="text-xl font-bold tracking-tight text-primary-950 dark:text-white">
            <a href="/catalogo">{title}</a>
        </h3>
        <span class="text-primary-800 dark:text-gray-400">{subtitle}</span>
        <p class="mt-3 mb-4 font-light text-primary-950 dark:text-gray-400" set:html={description}></p>
        <a href="/catalogo" class="inline-flex items-center font-medium text-primary-800 dark:text-gray-500 hover:no-underline">
            Ver cat√°logo
            <ArrowRight />
        </a>
    </div>
</div> 